<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Test Cases Suite" thread-count="5" verbose="1" parallel="tests">

    <listeners>
        <listener class-name="com.org.utilities.ExtentReportManager"></listener>
    </listeners>

    <test name="TC001_AccountRegistrationTest_Run in FireFix">
        <parameter name="OS" value="Windows"/>
        <parameter name="browser" value="fireFox"/>
        <classes>
            <class name="com.org.testCases.TC001_AccountRegistrationTest">
            </class>
        </classes>
    </test>

    <test name="TC001_AccountRegistrationTest_Run in Chrome">
        <parameter name="OS" value="Windows"/>
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="com.org.testCases.TC001_AccountRegistrationTest">
            </class>
        </classes>
    </test>

    <test name="TC001_AccountRegistrationTest_Run in Edge">
        <parameter name="OS" value="Windows"/>
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.org.testCases.TC001_AccountRegistrationTest">
            </class>
        </classes>
    </test>

</suite>

